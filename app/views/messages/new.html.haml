.text
  %h3= "Contact page"
#register
  - semantic_form_for @message,  :html => { :class => "main" } do |f|
    - f.inputs do
      = f.input :sender_name, :required => true
      = f.input :sender_email, :required => true
      = f.input :content,  :as => :text, :required => true

    - f.buttons do
      = f.commit_button "Send message"
    .required_mention= "<abbr title='required'>*</abbr> required"
