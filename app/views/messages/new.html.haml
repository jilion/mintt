= title "Contact"

.text
  %h3= "Contact page"
  %p= "If you have any question, please contact us through the following form:"
  
#register
  = semantic_form_for @message, :url => contact_path, :html => { :method => :post, :class => "main" } do |f|
    = f.inputs do
      = f.input :sender_name, :label => "Name", :input_html => { :value => @message.sender_name? ? @message.sender_name : (current_user.try(:full_name) || current_teacher.try(:name))  }
      = f.input :sender_email, :label => "Email", :input_html => { :value => @message.sender_email? ? @message.sender_email : (current_user.try(:email) || current_teacher.try(:email)) }
      = f.input :content, :as => :text, :label => "Message"
      
    = f.buttons do
      = f.commit_button "Send message"
    = render '/shared/required_mention'
