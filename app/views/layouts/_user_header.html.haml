#user_header
  .wrap
    - if user_signed_in? || teacher_signed_in?
      &nbsp;
      .right
        - if user_signed_in?
          = link_to "Log out", destroy_user_session_path
          = "|"
          = link_to edit_user_registration_path, :class => "user #{controller_name == 'registrations' ? 'active' : ''}" do
            %span.icon= full_name(current_user)
        - if teacher_signed_in?
          = link_to "Log out", destroy_teacher_session_path
          = "|"
          = link_to edit_teacher_registration_path, :class => "teacher #{controller_name == 'registrations' ? 'active' : ''}" do
            %span.icon= current_teacher.name_or_email
    - else
      = link_to "Student log in", new_user_session_path, :class => "user login"
      = link_to "Teacher log in", new_teacher_session_path, :class => "teacher login"