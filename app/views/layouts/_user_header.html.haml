- if user_signed_in?
  %ul
    %li= link_to "Program & documents", "/program"
    %li= link_to "Student log out", destroy_user_session_path
  - link_to edit_user_registration_path, :class => "user #{controller_name == 'registrations' ? 'active' : ''}" do
    %strong
      %span.icon= full_name(current_user)
    %span.corner
- else
  - link_to new_user_session_path, :class => "user" do
    %strong
      %span.icon= "Student log in"
    %span.corner
