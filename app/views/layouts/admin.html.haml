!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", :lang => "en"}
  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    
    %title= h(yield(:title) || "mintt: admin")
    
    %link{ :href => "/stylesheets/style.css", :type => "text/css", :media => "screen", :rel => "stylesheet" }
    %link{ :href => "/stylesheets/admin.css", :type => "text/css", :media => "screen", :rel => "stylesheet" }
    %link{ :href => "/stylesheets/print.css", :type => "text/css", :media => "print", :rel => "stylesheet" }
    
    %script{ :type => "text/javascript", :src => "http#{ request.ssl? ? 's':'' }://use.typekit.com/qwi4bur.js" }
    %script{ :type => "text/javascript" }= "try{Typekit.load();}catch(e){};"
    /[if gte IE 7]
      == <script type="text/javascript">var curvyCornersNoAutoScan = true;</script>
      %script{ :src => "/javascripts/curvycorners.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/prototype.min.js", :type => "text/javascript" }
    %script{ :src => "/javascripts/application.js", :type => "text/javascript" }
  %body
    - flash.each do |key, value|
      #flash{ :class => "flash_#{key}"}= h value
    #global
      #header
        #halo
        %h1
          - link_to root_path do
            %span= "mintt"
        %h2= "Management of Innovation and Technology Transfer"
        - link_to admin_path, :id => "admin_label" do
          %span= "Admin"
        %ul#menu
          %li.home
            - link_to admin_path do
              %span= "Home"
          %li{ :class => ('active' if controller_name == 'users') }= link_to "Candidates", admin_users_path
          %li{ :class => ('active' if controller_name == 'messages') }= link_to "Messages", admin_messages_path
          %li{ :class => ('active' if controller_name == 'mail_templates') }= link_to "Mail templates", admin_mail_templates_path
      #content.admin{ :class => "#{controller_name} #{action_name}" }
        = yield
      #sidebar
        = yield :sidebar
      .spacer
      #footer
        %p= "#{ link_to 'Contact', '/contact' } |  Â© 2010 EPFL , SRI, CM 2-Station 10, CH-1015 Lausanne, tel. +41 (0)21 693 70 23"
    
    - google_analytics