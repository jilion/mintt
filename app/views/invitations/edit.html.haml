- title = "Set my password & create my account"
- title " | #{title}"

%h2= title
- form_for resource_name, resource, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  = f.error_messages
  = f.hidden_field :invitation_token
  %p
    = f.label :password
    %br
    = f.password_field :password
    = error_message_on resource, :password
  
  %p
    = f.label :password_confirmation
    %br
    = f.password_field :password_confirmation
    = error_message_on resource, :password_confirmation
    
  %p= f.submit title
