- t = "Send invitation"
- title t

.text
- semantic_form_for resource_name, resource, :url => invitation_path(resource_name), :html => { :class => "main" } do |f|
  - f.inputs do
    = f.input :email, :required => true
    
  - f.buttons do
    = f.commit_button t
  .required_mention= raw "#{content_tag(:abbr, '*', :title => 'required')} required"