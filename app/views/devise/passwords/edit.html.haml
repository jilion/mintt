= title_and_page_title "Set my password"

= semantic_form_for [resource_name, resource], :url => password_path(resource_name), :html => { :class => "main", :method => :put } do |f|
  = f.inputs do
    = f.input :reset_password_token, :as => :hidden
    = f.input :password, :required => true
    = f.input :password_confirmation, :required => true

  = f.actions do
    = f.action(:submit, :label => "Set my password")
  = render '/shared/required_mention'