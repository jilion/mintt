- t = "Send invitation"
= title t

.text
= semantic_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :class => "main" } do |f|
  = f.inputs do
    = f.input :email, :required => true

  = f.actions do
    = f.action(:submit, :label => t)
  = render '/shared/required_mention'