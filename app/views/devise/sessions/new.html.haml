= title_and_page_title "#{resource_name == :user ? 'Student' : resource_name.to_s.humanize} log in"

= semantic_form_for resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "main" } do |f|
  = f.inputs do
    = f.input :email, :required => false
    = f.input :password, :required => false
    - if devise_mapping.rememberable?
      = f.input :remember_me, :as => :hidden, :input_html => { :value => "1" }
  = f.actions do
    = f.action(:submit, :label => "Log in")

- if devise_mapping.recoverable?
  %p= link_to "Forgot your password?", new_password_path(resource_name)