= title_and_page_title "#{session[:year]} Course Schedule"

#program_content
  = render "/programs/#{session[:year]}/program_content"

= content_for :sidebar do
  #sidebar
    - if teacher_signed_in? && current_teacher.years.try(:many?)
      = form_tag :program, :method => 'get', :id => "change_year" do
        = select_tag "year", options_for_select(current_teacher.years, session[:year])
        = submit_tag "Change year"

    %h4
      = "General information"
      %br
      = "and documents"
    %ul.document_list
      = list_documents_for_module(0)
