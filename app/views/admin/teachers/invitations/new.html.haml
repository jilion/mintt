= title_and_page_title "New teacher invitation"

.text
= semantic_form_for resource, :as => resource_name, :url => "/admin/teachers/invitation", :html => { :method => "post", :class => "main" } do |f|
  = f.inputs do
    = f.input :email, :required => true
  = f.buttons do
    = f.commit_button "Send invitation"
  = render '/shared/required_mention'