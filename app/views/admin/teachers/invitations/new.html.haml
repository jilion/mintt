= title_and_page_title "New teacher invitation"

.text
= semantic_form_for resource_name, resource, :url => invitation_path(resource_name), :html => { :method => "post", :class => "main" } do |f|
  = f.inputs do
    = f.input :email, :required => true
  = f.buttons do
    = f.commit_button "Send invitation"
  .required_mention= raw "#{content_tag(:abbr, '*', :title => 'required')} required"