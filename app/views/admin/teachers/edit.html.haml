- title "Teacher > Edit teacher: #{@teacher.name_or_email}"

.text
  %h3= "Editing teacher: #{content_tag(:em, @teacher.name_or_email}"
- semantic_form_for [:admin, @teacher], :html => { :class => "main" } do |f|
  - f.inputs do
    = f.input :name
    = f.input :email, :required => true
    = f.input :module_id
    
  - f.buttons do
    = submit_tag "Update"
  .required_mention= raw "#{content_tag(:abbr, '*', :title => 'required')} required"