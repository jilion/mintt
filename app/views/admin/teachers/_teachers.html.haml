%table
  %colgroup
    - 6.times do
      %col{ :class => cycle("even", "odd") }
  %tr
    %th= link_to "Registered", admin_teachers_path(sort_parameters('invitation_token', params)), :remote => true
    %th= link_to "Name", admin_teachers_path(sort_parameters('name', params)), :remote => true
    %th= link_to "Email", admin_teachers_path(sort_parameters('email', params)), :remote => true
    %th= "Active in"
    %th
    %th
  = render @teachers

= will_paginate(:params => { :format => nil }, :renderer => 'WillPaginate::ViewHelpers::LinkRendererRemote')
= page_entries_info @teachers
