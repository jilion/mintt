- title "mintt: admin | Messages > From #{message_sender_name(@message)} received #{time_ago_in_words(@message.created_at)}"

.text
  %h3= "Message"
  
  = back_to_inbox_or_trash(@message)
  |
  = button_to("reply", admin_message_path(@message), :method => :put, :id => "reply_message_#{@message.id}", :class => "button reply")
  |
  = button_to("delete", admin_message_path(@message), :confirm => "Are you sure?", :method => :delete, :id => "delete_message_#{@message.id}", :class => "button delete")
  
  #from= "From: #{message_sender_name_with_email_and_mailto(@message)}"
  
  #received= "Date: #{time_ago_in_words(@message.created_at)}"
  
  = mail_to(@message.sender_email, 'reply', :encode => "hex", :body => "#{message_sender_name_with_email(@message)} wrote on #{@message.created_at}:\n\n#{@message.content}", :class => "link")
  %hr
  
  #content= @message.content