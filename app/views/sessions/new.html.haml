- title "#{resource_name == :user ? 'Student' : resource_name.to_s.humanize} log in"

- semantic_form_for resource_name, resource, :url => session_path(resource_name), :html => { :class => "main" } do |f|
  - f.inputs do
    = f.input :email
    = f.input :password
    - if devise_mapping.rememberable?
      = f.input :remember_me, :as => :boolean
  - f.buttons do
    = f.commit_button "Login"

- if devise_mapping.recoverable?
  %p= link_to "Forgot password?", new_password_path(resource_name)