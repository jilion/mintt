- title 'Sign In'

%h2 Sign in

- form_for resource_name, resource, :url => session_path(resource_name) do |f|
  %p= f.label :email
  %p= f.text_field :email
  %p= f.label :password
  %p= f.password_field :password
  - if devise_mapping.rememberable?
    %p= f.check_box :remember_me
    %p= f.label :remember_me
  %p= f.submit "Sign in"

- if devise_mapping.recoverable?
  %p= link_to "Forgot password?", new_password_path(resource_name)

- if devise_mapping.confirmable?
  %p= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
