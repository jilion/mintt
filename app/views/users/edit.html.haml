- title ' | Edit Your Info'
%h2= "Edit Your Info"

- form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } do |f|
  - field_set_tag 'Update my email' do
    %p= f.text_field :email
    %p= error_message_on resource, :email
    %p= f.submit 'Update email'

- form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put } do |f|
  - field_set_tag 'Update my password' do
    %p= f.password_field :password
    %p= error_message_on resource, :password
    %p= f.password_field :password_confirmation
    %p= error_message_on resource, :password_confirmation
    %p= f.submit 'Update password'
